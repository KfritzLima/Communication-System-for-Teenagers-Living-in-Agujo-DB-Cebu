{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/app/**/*.ts"
  ],
  "exclude": [
    "src/main.server.ts",
    "src/server.ts",
    "src/app/app.config.server.ts",
    "src/app/app.routes.server.ts",
    "**/*.spec.ts"
  ]
}
